"-DARMY_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DARMY_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DARMY_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DARMY_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DARMY_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DARMY_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DARMY_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DARMY_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DARMY_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DARMY_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DARMY_LOGGING_LEVEL=${LOGGING_LEVEL}", \
"-DARMY_DATABASE_HOST=${DATABASE_HOST}", \
"-DARMY_DATABASE_PORT=${DATABASE_PORT}", \
"-DARMY_EUREKA_HOST=${EUREKA_HOST}", \
"-DARMY_EUREKA_PORT=${EUREKA_PORT}", \
"-DARMY_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DARMY_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DARMY_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DARMY_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DARMY_PORT=${PORT}", \
"-DARMY_FEIGN_LOGGING_LEVEL=${FEIGN_LOGGING_LEVEL}", \
"-DARMY_SOLDIER_FEIGN_LOGGING_LEVEL=${SOLDIER_FEIGN_LOGGING_LEVEL}", \
"-DARMY_CIRCUIT_BREAKER_ENABLED=${CIRCUIT_BREAKER_ENABLED}", \
"/opt/teenthofabud/solution-challenge/goodgamestudios/empire/army-app.jar"]