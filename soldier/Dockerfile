"-DSOLDIER_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DSOLDIER_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DSOLDIER_LOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DSOLDIER_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DSOLDIER_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DSOLDIER_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DSOLDIER_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DSOLDIER_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DSOLDIER_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DSOLDIER_DATABASE_HOST=${DATABASE_HOST}", \
"-DSOLDIER_DATABASE_PORT=${DATABASE_PORT}", \
"-DSOLDIER_EUREKA_HOST=${EUREKA_HOST}", \
"-DSOLDIER_EUREKA_PORT=${EUREKA_PORT}", \
"-DSOLDIER_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DSOLDIER_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"-DSOLDIER_GATEWAY_HOST=${GATEWAY_HOST}", \
"-DSOLDIER_GATEWAY_PORT=${GATEWAY_PORT}", \
"-DSOLDIER_SERVER_PORT=${PORT}", \
