FROM eclipse-temurin:11-jre-ubi9-minimal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/teenthofabud/solution-challenge/goodgamestudios/empire
COPY target/*.jar /opt/teenthofabud/solution-challenge/goodgamestudios/empire/gateway-app.jar
EXPOSE 8083
CMD ["java", "-jar", \
"-DGATEWAY_SPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}", \
"-DGATEWAY_SPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}", \
"-DGATEWAY_EUREKA_CLIENT_ENABLED=${EUREKA_CLIENT_ENABLED}", \
"-DGATEWAY_ZIPKIN_CLIENT_ENABLED=${ZIPKIN_CLIENT_ENABLED}", \
"-DGATEWAY_LOGSTASH_ENABLED=${LOGSTASH_ENABLED}", \
"-DGATEWAY_SWAGGER_ENABLED=${SWAGGER_ENABLED}", \
"-DGATEWAY_SERVER_PORT=${PORT}", \
"-DGATEWAY_LOGSTASH_HOST=${LOGSTASH_HOST}", \
"-DGATEWAY_LOGSTASH_PORT=${LOGSTASH_PORT}", \
"-DGATEWAY_SPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}", \
"-DGATEWAY_SPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}", \
"-DGATEWAY_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}", \
"-DGATEWAY_EUREKA_HOST=${EUREKA_HOST}", \
"-DGATEWAY_EUREKA_PORT=${EUREKA_PORT}", \
"-DGATEWAY_ZIPKIN_HOST=${ZIPKIN_HOST}", \
"-DGATEWAY_ZIPKIN_PORT=${ZIPKIN_PORT}", \
"/opt/teenthofabud/solution-challenge/goodgamestudios/empire/gateway-app.jar"]